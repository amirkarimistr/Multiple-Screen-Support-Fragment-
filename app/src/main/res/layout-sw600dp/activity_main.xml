<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_container">
    <fragment
        android:name="com.example.testkotlinproject.FragmentBlogpy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_blogpy"
        android:id="@+id/fragment_blogpy"/>

    <fragment
        android:name="com.example.testkotlinproject.FragmentBlogpyDetail"
        android:id="@+id/fragment_blogpy_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_blogpy_detail"/>
</LinearLayout>